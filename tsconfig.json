{
  "compilerOptions": {
    "baseUrl": "/",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "declaration": true,
    "strict": true,
    "types": ["jest"],
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "downlevelIteration": true,
    "esModuleInterop": true,

    "paths": {
      "@strict/*": ["src/*"]
    }
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "dist"]
}
