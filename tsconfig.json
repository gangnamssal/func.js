{
  "compilerOptions": {
    "baseUrl": "/",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "types": ["jest"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "downlevelIteration": true,
    "esModuleInterop": true,

    "paths": {
      "@strict": ["src/strict"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
